{% extends 'base.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}


    <div class="mb-5">
        <h1>{{ news.title }}</h1>

        <p class="text-muted">
            {{ news.date|date('d.m.Y') }}
        </p>

        <p class=" my-3">
            {{ news.text }}
        </p>

        <a class="btn btn-outline-success" role="button" href="{{path('app_news')}}">К списку новостей</a>
    </div>
{% endblock %}
