{% extends 'base.html.twig' %}

{% block title %}Новости{% endblock %}

{% block body %}


<div class="mb-5">
    <h1>Новости ✅</h1>

    <div class="list-group mt-3">

        {% for item in news %}
            <a href="{{ path('app_news_item', {slug: item.slug}) }}" class="list-group-item list-group-item-action py-4">
                {{ item.title }}
            </a>
        {% endfor %}

    </div>
</div>
{% endblock %}
